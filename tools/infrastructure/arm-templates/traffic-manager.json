{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "uniqueDnsName": {
      "type": "string",
      "metadata": {
        "description": "Relative DNS name for the traffic manager profile, resulting FQDN will be <uniqueDnsName>.trafficmanager.net, must be globally unique."
      }
    },
    "path": {
      "type": "string",
      "metadata": {
        "description": "The endpoint path to route request from traffic manager"
      }
    },
    "primaryEndPointName": {
      "type": "string",
      "defaultValue": "primary",
      "metadata": {
        "description": "The name of the primary endpoint"
      }
    },
    "primaryEndPointHostName": {
      "type": "string",
      "metadata": {
        "description": "The primary external endpoint to monitor"
      }
    },
    "primaryEndPointLocation": {
      "type": "string",
      "metadata": {
        "description": "The loction to send requests from to the primary endpoint"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/trafficmanagerprofiles",
      "apiVersion": "2018-08-01",
      "name": "[parameters('uniqueDnsName')]",
      "location": "global",
      "properties": {
        "profileStatus": "Enabled",
        "trafficRoutingMethod": "Performance",
        "dnsConfig": {
          "relativeName": "[parameters('uniqueDnsName')]",
          "ttl": 60
        },
        "monitorConfig": {
          "protocol": "HTTP",
          "port": 80,
          "path": "[parameters('path')]"
        },
        "endpoints": [
          {
            "type": "Microsoft.Network/TrafficManagerProfiles/ExternalEndpoints",
            "name": "[parameters('primaryEndPointName')]",
            "properties": {
              "target": "[parameters('primaryEndPointHostName')]",
              "endpointStatus": "Enabled",
              "endpointLocation": "[parameters('primaryEndPointLocation')]"
            }
          }
        ]
      }
    }
  ]
}